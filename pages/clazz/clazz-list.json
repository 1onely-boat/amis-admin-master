{
  "type": "page",
  "title": "班级列表",
  "remark": null,
  "visibleOn": "sessionStorage.getItem(\"班级管理\") == 1",
  "name": "page-demo",
  "toolbar": [
    {
      "type": "form",
      "body": [
        {
          "label": "批量导入班级",
          "type": "input-excel",
          "name": "excel"
        }
      ],
      "actions": [

        {
          "label": "导入班级表",
          "type": "button",
          "actionType": "ajax",
          "confirmText": "确定要导入该班级表嘛？",
          "api": "http://localhost:8888/clazz/importExcel"
        }
      ]
    },
    {
      "type": "button",
      "label": "新建班级",
      "level": "primary",
      "actionType": "drawer",
      "drawer": {
        "position": "top",
        "resizable": true ,
        "title": "请填写班级信息",
        "body":[
          {
            "title": "",
            "type": "form",
            "api": "http://localhost:8888/clazz",
            "name": "sample-edit-form",
            "body": [
              {
                "type": "input-text",
                "name": "id",
                "label": "班级id：",
                "visible": false
              },
              {
                "label": "课程选择",
                "type": "select",
                "name": "courseId",
                "required": true,
                "source": "http://localhost:8888/clazz/courseList"
              },
              {
                "label": "教师选择",
                "type": "select",
                "name": "empId",
                "required": true,
                "source": "http://localhost:8888/clazz/empList"
              },
              {
                "type": "input-year",
                "name": "clazzYear",
                "label": "开课年：",
                "format": "x",
                "required": true
              },
              {
                "label": "季度",
                "type": "select",
                "name": "clazzSeason",
                "required": true,
                "options": [
                  {
                    "label": "春季",
                    "value": 1
                  },
                  {
                    "label": "夏季",
                    "value": 2
                  },
                  {
                    "label": "秋季",
                    "value": 3
                  },
                  {
                    "label": "冬季",
                    "value": 4
                  }
                ]
              },
              {
                "type": "input-date",
                "name": "clazzStartDate",
                "label": "开课日期",
                "required": true,
                "format": "x"
              },
              {
                "type": "input-time",
                "name": "clazzStartTime",
                "label": "上课时间",
                "required": true,
                "format": "x"
              },
              {
                "type": "input-time",
                "name": "clazzEndTime",
                "label": "下课时间",
                "required": true,
                "format": "x"
              },
              {
                "type": "input-number",
                "name": "clazzSum",
                "label": "课程总次数",
                "required": true
              },
              {
                "label": "上课频率",
                "type": "select",
                "name": "clazzFrequency",
                "options": [
                  {
                    "label": "每天一次",
                    "value": 1
                  },
                  {
                    "label": "每周一次",
                    "value": 2
                  },
                  {
                    "label": "隔天一次",
                    "value": 3
                  }
                ]
              },
              {
                "label": "班级类型",
                "type": "select",
                "name": "clazzType",
                "options": [
                  {
                    "label": "一对一",
                    "value": 1
                  },
                  {
                    "label": "一对多",
                    "value": 2
                  },
                  {
                    "label": "大班课",
                    "value": 3
                  },
                  {
                    "label": "短期课",
                    "value": 4
                  }
                ]
              },
              {
                "type": "input-number",
                "name": "clazzLeastMember",
                "label": "最少开班人数",
                "required": true
              },
              {
                "type": "input-number",
                "name": "clazzMostMember",
                "label": "满班人数",
                "required": true
              }
            ]
          }
        ]
      }
    }

  ],
  "body": [
    {
      "type": "crud",
      "name": "sample",
      "autoGenerateFilter": true,
      "api": {
        "url": "http://localhost:8888/clazz/list",
        "data":{
          "page": "${page}",
          "perPage": "${perPage}",
          "dep": "${SessionDep}",
          "grade": "${SessionGrade}",
          "sessionEmpId": "${SessionEmpId}",
          "searchDep": "${searchDep}",
          "searchGrade": "${searchGrade}",
          "searchEmpName": "${searchEmpName}",
          "searchYear": "${searchYear}",
          "searchSeason": "${searchSeason}",
          "searchClazzName": "${searchClazzName}"
        }
      },
      "bulkActions": [
        {
          "label": "批量删除",
          "visible": true,
          "type": "button",
          "level": "danger",
          "actionType": "ajax",
          "api": "http://localhost:8888/clazz/${ids}/deleteS",
          "confirmText": "确定要批量删除?",
          "primaryField": "id"
        }
      ],
      "columns": [
        {
          "name": "id",
          "label": "班级id",
          "visible": false
        },
        {
          "name": "clazzName",
          "label": "班级名",
          "searchable": {
            "label": "班级名",
            "value": "",
            "name": "searchClazzName"
          }
        },
        {
          "name": "clazzDep",
          "label": "部门",
          "searchable": {
            "label": "所属部门",
            "type": "select",
            "visibleOn": "${SessionDep == null}",
            "name": "searchDep",
            "value": "",
            "options": [
              {
                "label": "所有",
                "value": ""
              },
              {
                "label": "小学部",
                "value": 1
              },
              {
                "label": "初中部",
                "value": 2
              },
              {
                "label": "高中部",
                "value": 3
              },
              {
                "label": "素养部",
                "value": 4
              }
            ]
          }
        },
        {
          "name": "grade",
          "label": "年级",
          "searchable": {
            "label": "课程年级",
            "type": "select",
            "name": "searchGrade",
            "visibleOn": "${SessionGrade == null}",
            "value": "",
            "options": [
              {
                "label": "所有",
                "value": ""
              },
              {
                "label": "大班",
                "value": 1,
                "visibleOn": "${searchDep == 1 || searchDep == ''}"
              },
              {
                "label": "一年级",
                "value": 2,
                "visibleOn": "${searchDep == 1 || searchDep == 4 || searchDep == ''}"
              },
              {
                "label": "二年级",
                "value": 3,
                "visibleOn": "${searchDep == 1 || searchDep == 4 || searchDep == ''}"
              },
              {
                "label": "三年级",
                "value": 4,
                "visibleOn": "${searchDep == 1 || searchDep == 4 || searchDep == ''}"
              },
              {
                "label": "四年级",
                "value": 5,
                "visibleOn": "${searchDep == 1 || searchDep == 4 || searchDep == ''}"
              },
              {
                "label": "五年级",
                "value": 6,
                "visibleOn": "${searchDep == 1 || searchDep == 4 || searchDep == ''}"
              },
              {
                "label": "六年级",
                "value": 7,
                "visibleOn": "${searchDep == 1 || searchDep == 2 || searchDep == 4 || searchDep == ''}"
              },
              {
                "label": "七年级",
                "value": 8,
                "visibleOn": "${searchDep == 1 || searchDep == 2 || searchDep == ''}"
              },
              {
                "label": "八年级",
                "value": 9,
                "visibleOn": "${searchDep == 2 || searchDep == ''}"
              },
              {
                "label": "九年级",
                "value": 10,
                "visibleOn": "${searchDep == 2 || searchDep == 3 || searchDep == ''}"
              },
              {
                "label": "高一",
                "value": 11,
                "visibleOn": "${searchDep == 3 || searchDep == ''}"
              },
              {
                "label": "高二",
                "value": 12,
                "visibleOn": "${searchDep == 3 || searchDep == ''}"
              },
              {
                "label": "高三",
                "value": 13,
                "visibleOn": "${searchDep == 3 || searchDep == ''}"
              }
            ]
          }
        },
        {
          "name": "empName",
          "label": "授课教师",
          "searchable": {
            "label": "授课教师",
            "name": "searchEmpName",
            "value": ""
          }

        },
        {
          "name": "clazzYear",
          "label": "开课年",
          "searchable": {
            "type": "input-year",
            "label": "开课年",
            "name": "searchYear",
            "format": "x"
          }
        },
        {
          "name": "clazzSeason",
          "label": "开课季节",
          "searchable": {
            "type": "select",
            "label": "开课季节",
            "name": "searchSeason",
            "value": "",
            "options":[
              {
                "label": "所有",
                "value": ""
              },
              {
                "label": "春季",
                "value": 1
              },
              {
                "label": "夏季",
                "value": 2
              },
              {
                "label": "秋季",
                "value": 3
              },
              {
                "label": "冬季",
                "value": 4
              }
            ]
          }
        },
        {
          "name": "clazzStartDate",
          "label": "开课日期"
        },
        {
          "name": "clazzStartTime",
          "label": "上课时间"
        },
        {
          "name": "clazzEndTime",
          "label": "下课时间"
        },
        {
          "name": "clazzSum",
          "label": "上课总次数"
        },
        {
          "name": "clazzFrequency",
          "label": "上课频率"
        },
        {
          "name": "clazzType",
          "label": "班级类型"
        },
        {
          "name": "clazzMember",
          "label": "报名人数"
        },
        {
          "name": "clazzLeastMember",
          "label": "最少开班人数"
        },
        {
          "name": "clazzMostMember",
          "label": "满班人数"
        },
        {
          "label": "是否结课",
          "type": "status",
          "name": "clazzIsFinish",
          "map": {
              "0": "fa fa-check-circle",
              "1": "fa fa-times-circle"
          },
          "labelMap": {
            "0": "未结课",
            "1": "已结课"
          },
          "value": "${clazzIsFinish}"
        },
        {
          "type": "operation",
          "label": "操作",
          "buttons": [
            {
              "type": "button-group",
              "buttons": [
                {
                  "type": "button",
                  "label": "班级学员管理",
                  "level": "primary",
                  "actionType": "link",
                  "link": "/clazz/${id}"
                },
                {
                  "type": "button",
                  "label": "修改班级信息",
                  "level": "info",
                  "actionType": "link",
                  "link": "/clazz/${id}/put"
                },
                {
                  "type": "button",
                  "label": "结课",
                  "level": "danger",
                  "actionType": "ajax",
                  "confirmText": "您确认要结课?",
                  "api": {
                    "url":"http://localhost:8888/clazz/finishClazz",
                    "method": "get",
                    "data":{
                      "clazzId": "${id}"
                    }
                  }
                },
                {
                  "type": "button",
                  "label": "删除",
                  "visible": true,
                  "level": "danger",
                  "actionType": "ajax",
                  "confirmText": "您确认要删除?",
                  "api": "http://localhost:8888/clazz/${id}/delete"
                }
              ]
            }
          ],
          "placeholder": "-",
          "fixed": "right"
        }
      ],
      "affixHeader": true,
      "columnsTogglable": "auto",
      "placeholder": "暂无数据",
      "tableClassName": "table-db table-striped",
      "headerClassName": "crud-table-header",
      "footerClassName": "crud-table-footer",
      "toolbarClassName": "crud-table-toolbar",
      "combineNum": 0,
      "bodyClassName": "panel-default"
    }
  ]
}
