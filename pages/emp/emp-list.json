{
  "type": "page",
  "title": "员工列表",
  "visibleOn": "sessionStorage.getItem(\"员工管理\") == 1",
  "remark": null,
  "name": "page-demo",
  "toolbar": [
    {
      "type": "button",
      "label": "自定义js",
      "level": "primary",
      "visibleOn": "${perm.人员管理 == 2}",
      "onEvent": {
        "click": {
          "actions": [
            {
              "actionType": "custom",
              "script": "doAction({actionType: 'ajax', args: {api: 'http://localhost:8888/emp/1'}});\n sessionStorage.setItem(\"jwt\", \"2\");\n doAction({actionType: 'link', \"args\": {\n                \"link\": \"/stu/list\"\n              }});"
            }
          ]
        }
      }
    },
    {
      "type": "button",
      "label": "角色权限管理（开发用）",
      "actionType": "drawer",
      "drawer": {
        "size": "xl",
        "position": "top",
        "title": "选择角色和权限",
        "body":[
          {
            "title": "",
            "type": "form",
            "debug": true,
            "api": "http://localhost:8888/emp/addRolePerm",
            "name": "sample-edit-form",
            "body": [
              {
                "label": "角色",
                "type": "select",
                "required": true,
                "name": "roleId",
                "options": [
                  {
                    "label": "校长",
                    "value": 1
                  },
                  {
                    "label": "副校长",
                    "value": 2
                  },
                  {
                    "label": "部门主管",
                    "value": 3
                  },
                  {
                    "label": "教务",
                    "value": 4
                  },
                  {
                    "label": "教师",
                    "value": 5
                  },
                  {
                    "label": "助教",
                    "value": 6
                  },
                  {
                    "label": "督导",
                    "value": 7
                  },
                  {
                    "label": "财务",
                    "value": 8
                  }
                ]
              },
              {
                "type": "service",
                "api": {
                  "url":"http://localhost:8888/emp/getRolesPerm/${roleId}",
                  "sendOn": "${roleId != null}"
                },
                "body": [
                  {
                    "type": "static-json",
                    "name": "json",
                    "label": "已拥有权限",
                    "visibleOn": "${options != null}",
                    "value": "${options}"
                  }
                ]
              },
              {
                "type": "input-tree",
                "name": "permissionIds",
                "required": true,
                "label": "请位角色分配权限",
                "autoCheckChildren": true,
                "showOutline": true,
                "cascade": true,
                "initiallyOpen": false,
                "multiple": true,
                "withChildren": true,
                "source": {
                  "url": "http://localhost:8888/emp/getAllPerms"
                }
              }

            ]
          }
        ]

      }
    },
    {
      "type": "button",
      "label": "新增员工",
      "level": "primary",
      "actionType": "drawer",
      "drawer": {
        "position": "top",
        "title": "请填写员工信息",
        "body":[
          {
            "title": "",
            "type": "form",
            "debug": true,
            "api": "http://localhost:8888/emp",
            "name": "sample-edit-form",
            "body": [
              {
                "type": "input-text",
                "name": "empName",
                "label": "员工姓名：",
                "required": true
              },
              {
                "name": "empSex",
                "type": "radios",
                "label": "性别",
                "options": [
                  {
                    "label": "男",
                    "value": 1
                  },
                  {
                    "label": "女",
                    "value": 2
                  }
                ]
              },
              {
                "type": "input-text",
                "name": "empPhone",
                "label": "员工手机号：",
                "validations": {
                  "isPhoneNumber": "validate.isPhoneNumber"
                },
                "description": "请输入11位手机号",
                "required": true
              },
              {
                "label": "部门",
                "type": "select",
                "name": "empDep",
                "options": [
                  {
                    "label": "小学部",
                    "value": 1
                  },
                  {
                    "label": "初中部",
                    "value": 2
                  },
                  {
                    "label": "高中部",
                    "value": 3
                  },
                  {
                    "label": "素养部",
                    "value": 4
                  }
                ]
              },
              {
                "label": "年级",
                "type": "select",
                "name": "empGrade",
                "multiple": true,
                "options": [
                  {
                    "label": "大班",
                    "value": 1,
                    "visibleOn": "${empDep == 1}"
                  },
                  {
                    "label": "一年级",
                    "value": 2,
                    "visibleOn": "${empDep == 1 || empDep == 4}"
                  },
                  {
                    "label": "二年级",
                    "value": 3,
                    "visibleOn": "${empDep == 1 || empDep == 4}"
                  },
                  {
                    "label": "三年级",
                    "value": 4,
                    "visibleOn": "${empDep == 1 || empDep == 4}"
                  },
                  {
                    "label": "四年级",
                    "value": 5,
                    "visibleOn": "${empDep == 1 || empDep == 4}"
                  },
                  {
                    "label": "五年级",
                    "value": 6,
                    "visibleOn": "${empDep == 1 || empDep == 4}"
                  },
                  {
                    "label": "六年级",
                    "value": 7,
                    "visibleOn": "${empDep == 1 || empDep == 2 || empDep == 4}"
                  },
                  {
                    "label": "七年级",
                    "value": 8,
                    "visibleOn": "${empDep == 1 || empDep == 2}"
                  },
                  {
                    "label": "八年级",
                    "value": 9,
                    "visibleOn": "${empDep == 2}"
                  },
                  {
                    "label": "九年级",
                    "value": 10,
                    "visibleOn": "${empDep == 2 || empDep == 3}"
                  },
                  {
                    "label": "高一",
                    "value": 11,
                    "visibleOn": "${empDep == 3}"
                  },
                  {
                    "label": "高二",
                    "value": 12,
                    "visibleOn": "${empDep == 3}"
                  },
                  {
                    "label": "高三",
                    "value": 13,
                    "visibleOn": "${empDep == 3}"
                  }
                ]
              },
              {
                "label": "学科选择",
                "type": "select",
                "name": "subjectId",
                "required": true,
                "source": "http://localhost:8888/course/subjectList/${empDep}",
                "visibleOn": "${empDep > 0}"
              },
              {
                "name": "empType",
                "type": "checkboxes",
                "label": "选择角色",
                "options": [
                  {
                    "label": "校长",
                    "value": 1
                  },
                  {
                    "label": "副校长",
                    "value": 2
                  },
                  {
                    "label": "部门主管",
                    "value": 3
                  },
                  {
                    "label": "教务",
                    "value": 4
                  },
                  {
                    "label": "教师",
                    "value": 5
                  },
                  {
                    "label": "助教",
                    "value": 6
                  },
                  {
                    "label": "督导",
                    "value": 7
                  },
                  {
                    "label": "财务",
                    "value": 8
                  }
                ]
              }
            ]
          }
        ]

        }
      }

  ],
  "body": [
    {
      "type": "crud",
      "name": "sample",
      "autoGenerateFilter": true,
      "api": "http://localhost:8888/emp/list",
      "bulkActions": [
        {
          "label": "批量修改",
          "type": "button",
          "actionType": "dialog",
          "level": "primary",
          "visible": false,
          "dialog": {
            "title": "批量编辑",
            "name": "sample-bulk-edit",
            "body": {
              "type": "form",
              "api": "https://3xsw4ap8wah59.cfc-execute.bj.baidubce.com/api/amis-mock/sample/bulkUpdate2/",
              "controls": [
                {
                  "type": "text",
                  "name": "engine",
                  "label": "Engine"
                }
              ]
            }
          }
        },
        {
          "label": "批量删除",
          "type": "button",
          "level": "danger",
          "actionType": "ajax",
          "api": "http://localhost:8888/emp/${ids}/deleteS",
          "confirmText": "确定要批量删除?",
          "primaryField": "id"
        }
      ],
      "columns": [
        {
          "name": "id",
          "label": "员工id",
          "sortable": true,
          "visible": false
        },
        {
          "name": "empName",
          "label": "员工姓名",
          "searchable": {
            "value": ""
          },
          "sortable": true
        },
        {
          "name": "empSex",
          "label": "员工性别",
          "sortable": true
        },
        {
          "name": "empPhone",
          "label": "员工手机号",
          "sortable": true
        },
        {
          "name": "empDep",
          "label": "所属部门",
          "type": "mapping",
          "map":{
            "1": "小学部",
            "2": "初中部",
            "3": "高中部",
            "4": "素养部"
          },
          "searchable": {
            "label": "所属部门",
            "type": "select",
            "name": "empDep",
            "value": "",
            "options": [
              {
                "label": "所有",
                "value": ""
              },
              {
                "label": "小学部",
                "value": 1
              },
              {
                "label": "初中部",
                "value": 2
              },
              {
                "label": "高中部",
                "value": 3
              },
              {
                "label": "素养部",
                "value": 4
              }
            ]
          }

        },
        {
          "label": "是否在职",
          "type": "status",
          "name": "${empOnduty}",
          "map": {
            "1": "fa fa-check-circle",
            "0": "fa fa-times-circle"
          },
          "labelMap": {
            "0": "已离职",
            "1": "在职"
          }
        },
        {
          "type": "operation",
          "label": "操作",
          "buttons": [
            {
              "type": "button-group",
              "buttons": [
                {
                  "type": "button",
                  "label": "离职",
                  "level": "primary",
                  "actionType": "ajax",
                  "confirmText": "确定该员工离职嘛?",
                  "api": {
                    "url": "http://localhost:8888/emp/leave/${id}",
                    "method": "get"
                  }
                },
                {
                  "type": "button",
                  "label": "查看",
                  "level": "primary",
                  "actionType": "link",
                  "link": "/emp/${id}",
                  "visible": false
                },
                {
                  "type": "button",
                  "label": "修改",
                  "level": "info",
                  "actionType": "link",
                  "link": "/emp/${id}/put"
                },
                {
                  "type": "button",
                  "label": "删除",
                  "level": "danger",
                  "actionType": "ajax",
                  "confirmText": "您确认要删除?",
                  "api": "http://localhost:8888/emp/${id}/delete"
                }
              ]
            }
          ],
          "placeholder": "-",
          "fixed": "right"
        }
      ],
      "affixHeader": true,
      "columnsTogglable": "auto",
      "placeholder": "暂无数据",
      "tableClassName": "table-db table-striped",
      "headerClassName": "crud-table-header",
      "footerClassName": "crud-table-footer",
      "toolbarClassName": "crud-table-toolbar",
      "combineNum": 0,
      "bodyClassName": "panel-default"
    }
  ]
}
