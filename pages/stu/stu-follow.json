{
  "type": "page",
  "title": "学生跟进情况",
  "remark": null,
  "visibleOn": "sessionStorage.getItem(\"跟进管理\") == 1",
  "name": "page-demo",
  "toolbar": [
    {
      "type": "form",
      "body": [
        {
          "type": "input-excel",
          "name": "excel"
        }
      ],
      "actions": [
        {
          "label": "导入学生表",
          "type": "button",
          "actionType": "ajax",
          "confirmText": "确定要导入该学生表嘛？",
          "api": "http://localhost:8888/stu/importExcel"
        }
      ]
    },
    {
      "type": "button",
      "label": "新增学生",
      "level": "primary",
      "actionType": "drawer",
      "drawer": {
        "position": "top",
        "title": "请填写学生信息",
        "body":[
          {
            "title": "",
            "type": "form",
            "api": "http://localhost:8888/stu",
            "name": "sample-edit-form",
            "body": [
              {
                "type": "input-text",
                "name": "stuName",
                "label": "学生姓名：",
                "required": true
              },
              {
                "label": "所属部门",
                "type": "select",
                "name": "stuDep",
                "options": [
                  {
                    "label": "小学部",
                    "value": 1
                  },
                  {
                    "label": "初中部",
                    "value": 2
                  },
                  {
                    "label": "高中部",
                    "value": 3
                  },
                  {
                    "label": "素养部",
                    "value": 4
                  }
                ]
              },
              {
                "label": "学生年级",
                "type": "select",
                "name": "stuGrade",
                "required": true,
                "options": [
                  {
                    "label": "大班",
                    "value": 1,
                    "visibleOn": "${stuDep == 1}"
                  },
                  {
                    "label": "一年级",
                    "value": 2,
                    "visibleOn": "${stuDep == 1 || stuDep == 4}"
                  },
                  {
                    "label": "二年级",
                    "value": 3,
                    "visibleOn": "${stuDep == 1 || stuDep == 4}"
                  },
                  {
                    "label": "三年级",
                    "value": 4,
                    "visibleOn": "${stuDep == 1 || stuDep == 4}"
                  },
                  {
                    "label": "四年级",
                    "value": 5,
                    "visibleOn": "${stuDep == 1 || stuDep == 4}"
                  },
                  {
                    "label": "五年级",
                    "value": 6,
                    "visibleOn": "${stuDep == 1 || stuDep == 4}"
                  },
                  {
                    "label": "六年级",
                    "value": 7,
                    "visibleOn": "${stuDep == 1 || stuDep == 2 || stuDep == 4}"
                  },
                  {
                    "label": "七年级",
                    "value": 8,
                    "visibleOn": "${stuDep == 1 || stuDep == 2}"
                  },
                  {
                    "label": "八年级",
                    "value": 9,
                    "visibleOn": "${stuDep == 2}"
                  },
                  {
                    "label": "九年级",
                    "value": 10,
                    "visibleOn": "${stuDep == 2 || stuDep == 3}"
                  },
                  {
                    "label": "高一",
                    "value": 11,
                    "visibleOn": "${stuDep == 3}"
                  },
                  {
                    "label": "高二",
                    "value": 12,
                    "visibleOn": "${stuDep == 3}"
                  },
                  {
                    "label": "高三",
                    "value": 13,
                    "visibleOn": "${stuDep == 3}"
                  }
                ]
              },
              {
                "label": "意向科目",
                "type": "select",
                "name": "stuIntentionSubject",
                "required": true,
                "source": "http://localhost:8888/course/subjectList/${stuDep}",
                "visibleOn": "${stuDep > 0}"
              },
              {
                "type": "input-text",
                "name": "stuSchool",
                "label": "学生学校：",
                "required": true
              },
              {
                "type": "input-text",
                "name": "stuParentPhone",
                "label": "家长手机号：",
                "required": true
              }
            ]
          }
        ]

      }
    }

  ],
  "body": [
    {
      "type": "crud",
      "name": "sample",
      "autoGenerateFilter": true,
      "headerToolbar": [
        "bulkActions",
        {
          "type": "export-excel",
          "label": "导出学生跟进信息",
          "filename": "学生跟进信息",
          "api": {
            "url": "http://localhost:8888/stu/export1",
            "data":{
              "dep": "${SessionDep}",
              "grade": "${SessionGrade}"
            },
            "adaptor": "if (payload.status === 401)\n                  window.alert(\"无权限\")\n                return payload"
          }
        }
      ],
      "api": {
        "url": "http://localhost:8888/stu/list",
        "data":{
          "page": "${page}",
          "perPage": "${perPage}",
          "dep": "${SessionDep}",
          "grade": "${SessionGrade}",
          "searchFollowState": "${searchFollowState}",
          "searchStuName": "${searchStuName}"
        }
      },
      "columns": [
        {
          "name": "id",
          "label": "学生id",
          "sortable": true,
          "visible": false
        },
        {
          "name": "stuName",
          "label": "学生姓名",
          "searchable": {
            "name": "searchStuName",
            "label": "姓名",
            "value": ""
          }
        },
        {
          "name": "stuFollowState",
          "label": "跟进状态",
          "type": "mapping",
          "map": {
            "1": "未约",
            "2": "未测",
            "3": "未录取",
            "4": "未通知",
            "5": "已通知",
            "6": "未交费",
            "7": "已转化"
          },
          "searchable": {
            "label": "跟进状态",
            "type": "select",
            "name": "searchFollowState",
            "value": "",
            "options": [
              {
                "label": "所有",
                "value": ""
              },
              {
                "label": "未约",
                "value": 1
              },
              {
                "label": "未测",
                "value": 2
              },
              {
                "label": "未录取",
                "value": 3
              },
              {
                "label": "未通知",
                "value": 4
              },
              {
                "label": "已通知",
                "value": 5
              },
              {
                "label": "未交费",
                "value": 6
              },
              {
                "label": "已转化",
                "value": 7
              }
            ]
          }

        },
        {
          "name": "stuFollowPeople",
          "label": "跟进人"
        },
        {
          "label": "跟进时间时间",
          "name": "stuFollowDate",
          "type": "date",
          "valueFormat": "x"
        },
        {
          "name": "stuFollowContent",
          "label": "跟进沟通内容"
        },
        {
          "name": "stuFollowExamTime",
          "label": "预约测试时间",
          "type": "date",
          "valueFormat": "x"
        },
        {
          "name": "stuFollowExamSubject",
          "label": "预约测试科目"
        },
        {
          "name": "stuFollowExamIsArrive",
          "label": "测试到场情况",
          "type": "mapping",
          "map": {
            "1": "已到场",
            "0": "未到场"
          }
        },
        {
          "name": "stuFollowExamScore",
          "label": "测试分数"
        },
        {
          "type": "operation",
          "label": "操作",
          "width": "",
          "buttons": [
            {
              "type": "button-group",
              "buttons": [
                {
                  "type": "button",
                  "label": "跟进管理",
                  "level": "info",
                  "actionType": "link",
                  "link": "/stu/follow/${id}/put"
                },
                {
                  "type": "button",
                  "label": "报名",
                  "level": "info",
                  "actionType": "link",
                  "link": "/stu/enroll/${id}"
                }
              ]
            }
          ],
          "placeholder": "-",
          "fixed": "right"
        }
      ],
      "affixHeader": true,
      "columnsTogglable": "auto",
      "placeholder": "暂无数据",
      "tableClassName": "table-db table-striped",
      "headerClassName": "crud-table-header",
      "footerClassName": "crud-table-footer",
      "toolbarClassName": "crud-table-toolbar",
      "combineNum": 0,
      "bodyClassName": "panel-default"
    }
  ]
}
