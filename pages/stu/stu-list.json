{
  "type": "page",
  "title": "学生列表",
  "visibleOn": "sessionStorage.getItem(\"学生管理\") == 1",
  "remark": null,
  "name": "page-demo",
  "toolbar": [
    {
      "type": "button",
      "label": "新增学生",
      "level": "primary",
      "actionType": "drawer",
      "drawer": {
        "position": "top",
        "title": "请填写学生信息",
        "body":[
          {
            "title": "",
            "type": "form",
            "api": "http://localhost:8888/stu",
            "name": "sample-edit-form",
            "body": [
              {
                "type": "input-text",
                "name": "stuName",
                "label": "学生姓名：",
                "required": true
              },
              {
                "label": "所属部门",
                "type": "select",
                "name": "stuDep",
                "options": [
                  {
                    "label": "小学部",
                    "value": 1
                  },
                  {
                    "label": "初中部",
                    "value": 2
                  },
                  {
                    "label": "高中部",
                    "value": 3
                  },
                  {
                    "label": "素养部",
                    "value": 4
                  }
                ]
              },
              {
                "label": "学生年级",
                "type": "select",
                "name": "stuGrade",
                "required": true,
                "options": [
                  {
                    "label": "大班",
                    "value": 1,
                    "visibleOn": "${stuDep == 1}"
                  },
                  {
                    "label": "一年级",
                    "value": 2,
                    "visibleOn": "${stuDep == 1 || stuDep == 4}"
                  },
                  {
                    "label": "二年级",
                    "value": 3,
                    "visibleOn": "${stuDep == 1 || stuDep == 4}"
                  },
                  {
                    "label": "三年级",
                    "value": 4,
                    "visibleOn": "${stuDep == 1 || stuDep == 4}"
                  },
                  {
                    "label": "四年级",
                    "value": 5,
                    "visibleOn": "${stuDep == 1 || stuDep == 4}"
                  },
                  {
                    "label": "五年级",
                    "value": 6,
                    "visibleOn": "${stuDep == 1 || stuDep == 4}"
                  },
                  {
                    "label": "六年级",
                    "value": 7,
                    "visibleOn": "${stuDep == 1 || stuDep == 2 || stuDep == 4}"
                  },
                  {
                    "label": "七年级",
                    "value": 8,
                    "visibleOn": "${stuDep == 1 || stuDep == 2}"
                  },
                  {
                    "label": "八年级",
                    "value": 9,
                    "visibleOn": "${stuDep == 2}"
                  },
                  {
                    "label": "九年级",
                    "value": 10,
                    "visibleOn": "${stuDep == 2 || stuDep == 3}"
                  },
                  {
                    "label": "高一",
                    "value": 11,
                    "visibleOn": "${stuDep == 3}"
                  },
                  {
                    "label": "高二",
                    "value": 12,
                    "visibleOn": "${stuDep == 3}"
                  },
                  {
                    "label": "高三",
                    "value": 13,
                    "visibleOn": "${stuDep == 3}"
                  }
                ]
              },
              {
                "label": "意向科目",
                "type": "select",
                "name": "stuIntentionSubject",
                "required": true,
                "source": "http://localhost:8888/course/subjectList/${stuDep}",
                "visibleOn": "${stuDep > 0}"
              },
              {
                "type": "input-text",
                "name": "stuSchool",
                "label": "学生学校：",
                "required": true
              },
              {
                "type": "input-text",
                "name": "stuParentPhone",
                "label": "家长手机号：",
                "required": true
              }
            ]
          }
        ]

      }
    }

  ],
  "body": [
    {
      "type": "crud",
      "name": "sample",
      "autoGenerateFilter": true,
      "api": {
        "url": "http://localhost:8888/stu/list",
        "data":{
          "page": "${page}",
          "perPage": "${perPage}",
          "dep": "${SessionDep}",
          "grade": "${SessionGrade}",
          "searchStuName": "${searchStuName}",
          "searchDep": "${searchDep}",
          "searchGrade": "${searchGrade}",
          "searchState": "${searchState}",
          "searchPhone": "${searchPhone}",
          "searchSubject": "${searchSubject}"
        }
      },
      "headerToolbar": [
        {
          "type": "export-excel",
          "label": "导出所有学生信息",
          "filename": "学生列表",
          "api": {
            "url": "http://localhost:8888/stu/export",
            "data":{
              "dep": "${SessionDep}",
              "grade": "${SessionGrade}"
            }
          }
        },
        "bulkActions"
      ],
      "bulkActions": [
        {
          "label": "批量删除",
          "type": "button",
          "level": "danger",
          "actionType": "ajax",
          "api": "http://localhost:8888/stu/${ids}/deleteS",
          "confirmText": "确定要批量删除?",
          "primaryField": "id"
        }
      ],
      "columns": [
        {
          "name": "id",
          "label": "学生id",
          "sortable": true,
          "visible": false
        },
        {
          "name": "stuName",
          "label": "学生姓名",
          "searchable": {
            "label": "姓名",
            "name": "searchStuName",
            "value": ""
          }
        },
        {
          "name": "stuDep",
          "label": "学生部门",
          "type": "mapping",
          "map": {
            "1": "小学部",
            "2": "初中部",
            "3": "高中部",
            "4": "素养部"
          },
          "searchable": {
            "label": "所属部门",
            "type": "select",
            "visibleOn": "${SessionDep == null}",
            "name": "searchDep",
            "value": "",
            "options": [
              {
                "label": "所有",
                "value": ""
              },
              {
                "label": "小学部",
                "value": 1
              },
              {
                "label": "初中部",
                "value": 2
              },
              {
                "label": "高中部",
                "value": 3
              },
              {
                "label": "素养部",
                "value": 4
              }
            ]
          }
        },
        {
          "name": "stuGrade",
          "label": "学生年级段",
          "type": "mapping",
          "map": {
            "1": "幼儿大班",
            "2": "一年级",
            "3": "二年级",
            "4": "三年级",
            "5": "四年级",
            "6": "五年级",
            "7": "六年级",
            "8": "七年级",
            "9": "八年级",
            "10": "九年级",
            "11": "高一",
            "12": "高二",
            "13": "高三"
          },
          "searchable": {
            "label": "课程年级",
            "type": "select",
            "name": "searchGrade",
            "visibleOn": "${SessionGrade == null}",
            "value": "",
            "options": [
              {
                "label": "所有",
                "value": ""
              },
              {
                "label": "大班",
                "value": 1,
                "visibleOn": "${searchDep == 1 || searchDep == ''}"
              },
              {
                "label": "一年级",
                "value": 2,
                "visibleOn": "${searchDep == 1 || searchDep == 4 || searchDep == ''}"
              },
              {
                "label": "二年级",
                "value": 3,
                "visibleOn": "${searchDep == 1 || searchDep == 4 || searchDep == ''}"
              },
              {
                "label": "三年级",
                "value": 4,
                "visibleOn": "${searchDep == 1 || searchDep == 4 || searchDep == ''}"
              },
              {
                "label": "四年级",
                "value": 5,
                "visibleOn": "${searchDep == 1 || searchDep == 4 || searchDep == ''}"
              },
              {
                "label": "五年级",
                "value": 6,
                "visibleOn": "${searchDep == 1 || searchDep == 4 || searchDep == ''}"
              },
              {
                "label": "六年级",
                "value": 7,
                "visibleOn": "${searchDep == 1 || searchDep == 2 || searchDep == 4 || searchDep == ''}"
              },
              {
                "label": "七年级",
                "value": 8,
                "visibleOn": "${searchDep == 1 || searchDep == 2 || searchDep == ''}"
              },
              {
                "label": "八年级",
                "value": 9,
                "visibleOn": "${searchDep == 2 || searchDep == ''}"
              },
              {
                "label": "九年级",
                "value": 10,
                "visibleOn": "${searchDep == 2 || searchDep == 3 || searchDep == ''}"
              },
              {
                "label": "高一",
                "value": 11,
                "visibleOn": "${searchDep == 3 || searchDep == ''}"
              },
              {
                "label": "高二",
                "value": 12,
                "visibleOn": "${searchDep == 3 || searchDep == ''}"
              },
              {
                "label": "高三",
                "value": 13,
                "visibleOn": "${searchDep == 3 || searchDep == ''}"
              }
            ]
          }
        },
        {
          "name": "stuStatus",
          "label": "学生状态",
          "type": "mapping",
          "map": {
            "0": "未报名",
            "1": "在读",
            "2": "退费",
            "3": "停课"
          },
          "searchable": {
            "label": "学生状态",
            "type": "select",
            "name": "searchState",
            "value": "",
            "options": [
              {
                "label": "所有",
                "value": ""
              },
              {
                "label": "未报名",
                "value": 0
              },
              {
                "label": "在读",
                "value": 1
              },
              {
                "label": "退课",
                "value": 2
              },
              {
                "label": "停课",
                "value": 3
              }
            ]
          }
        },
        {
          "name": "subjectName",
          "label": "意向科目",
          "searchable": {
            "label": "意向科目",
            "type": "select",
            "visibleOn": "${searchDep != ''}",
            "name": "searchSubject",
            "value": "",
            "source": "http://localhost:8888/course/subjectList/${searchDep}"
          }
        },
        {
          "name": "stuSchool",
          "label": "学生学校"
        },
        {
          "name": "stuParentPhone",
          "label": "家长手机号",
          "searchable": {
            "label": "手机号",
            "name": "searchPhone",
            "value": ""
          }
        },
        {
          "type": "operation",
          "label": "操作",
          "width": "",
          "buttons": [
            {
              "type": "button-group",
              "buttons": [
                {
                  "type": "button",
                  "label": "查看",
                  "level": "primary",
                  "actionType": "link",
                  "link": "/stu/${id}",
                  "visible": false
                },
                {
                  "type": "button",
                  "label": "修改",
                  "level": "info",
                  "actionType": "link",
                  "link": "/stu/${id}/put"
                },
                {
                  "type": "button",
                  "label": "删除",
                  "level": "danger",
                  "actionType": "ajax",
                  "confirmText": "您确认要删除?",
                  "api": "http://localhost:8888/stu/${id}/delete"
                }
              ]
            }
          ],
          "placeholder": "-",
          "fixed": "right"
        }
      ],
      "affixHeader": true,
      "columnsTogglable": "auto",
      "placeholder": "暂无数据",
      "tableClassName": "table-db table-striped",
      "headerClassName": "crud-table-header",
      "footerClassName": "crud-table-footer",
      "toolbarClassName": "crud-table-toolbar",
      "combineNum": 0,
      "bodyClassName": "panel-default"
    }
  ]
}
